# TA-RDM ETL Configuration
# Copy this file to .env and update with your environment-specific values

# ==============================================================================
# MySQL L2 Database Configuration
# ==============================================================================
DB_HOST=localhost
DB_PORT=3308
DB_USER=ta_user
DB_PASSWORD=your_secure_password_here
DB_DATABASE=

# Connection Pool Settings
DB_POOL_SIZE=5
DB_POOL_RECYCLE=3600

# ==============================================================================
# ClickHouse L3 Database Configuration
# ==============================================================================
CH_HOST=localhost
CH_PORT=8123
CH_DATABASE=ta_dw
CH_USER=default
CH_PASSWORD=

# ClickHouse Settings
CH_SECURE=False
CH_VERIFY=True
CH_TIMEOUT=60

# ==============================================================================
# Logging Configuration
# ==============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ==============================================================================
# ETL Configuration
# ==============================================================================
# Batch size for bulk inserts (adjust based on memory and performance)
ETL_BATCH_SIZE=1000

# Enable validation after ETL
ETL_AUTO_VALIDATE=true

# ==============================================================================
# Notes
# ==============================================================================
# - Keep this file secure and do not commit .env to version control
# - Different environments (dev/test/prod) should have separate .env files
# - Validate configuration with: python scripts/test_connections.py
